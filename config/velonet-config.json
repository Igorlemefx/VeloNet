      }
    },
    "blue": {
      "name": "Azul",
      "colors": {
        "primary": "#0a1929",
        "secondary": "#132f4c",
        "text": "#ffffff",
        "text_secondary": "#b2bac2",
        "accent": "#66b2ff",
        "border": "rgba(255, 255, 255, 0.1)"
      }
    }
  },
  "features": {
    "custom_cursor": true,
    "notifications": true,
    "media_upload": true,
    "news_system": true,
